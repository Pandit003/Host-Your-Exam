<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Toolbar Style -->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary_blue</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>

    <!-- Custom SearchView Theme -->
    <style name="CustomSearchViewTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:queryBackground">@android:color/transparent</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item> <!-- Define a drawable or color -->
    </style>


</resources>