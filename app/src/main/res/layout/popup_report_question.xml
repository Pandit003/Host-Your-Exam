<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_close_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close_24"
        app:tint="@color/black"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report Question!"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wrong Question"
        android:textColor="@color/black"
        android:padding="13dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/report_textview_active_backgroung"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/darkgray"/>
    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grammatical Error"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:padding="13dp"
        android:background="@drawable/report_textview_active_backgroung"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/darkgray"/>
    <TextView
        android:id="@+id/tv_incorrect_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incorrect answer options"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:padding="13dp"
        android:background="@drawable/report_textview_active_backgroung"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/darkgray"/>
    <TextView
        android:id="@+id/tv_notvisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question not visible"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:padding="13dp"
        android:background="@drawable/report_textview_active_backgroung"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/darkgray"/>
    <TextView
        android:id="@+id/tv_spellingmistake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spelling mistake"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:padding="13dp"
        android:background="@drawable/report_textview_active_backgroung"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/darkgray"/>
    <TextView
        android:id="@+id/tv_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="other"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:padding="13dp"
        android:background="@drawable/report_textview_active_backgroung"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/darkgray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp">
        <EditText
            android:id="@+id/et_report_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:hint="Please tell us more about the report (at least 7-8 words)"/>
        <ImageView
            android:id="@+id/iv_report_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_send_24"/>
    </LinearLayout>

</LinearLayout>