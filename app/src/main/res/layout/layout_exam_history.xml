<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/box_gradient"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:paddingStart="5dp"
            android:layout_weight=".55"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/attempt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight=".75"
            android:text="24/08/2024"
            android:textColor="@color/black"/>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_weight=".7">
            <TextView
                android:id="@+id/exam_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dp"
                android:text="Uncompleted"
                android:background="@drawable/green_gradient"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="5dp"
        android:background="#C8C9CC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hosted by : "
            android:paddingStart="5dp"
            android:layout_weight=".55"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/hosted_by"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1.45"
            android:text="Rohit Pandit"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subject : "
            android:paddingStart="5dp"
            android:layout_weight=".55"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/subject_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1.45"
            android:text="Computer Application"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Attempt No : "
            android:paddingStart="5dp"
            android:layout_weight=".55"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/no_of_attempt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1.45"
            android:text="0"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/pr_markScored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:progress="20"
            android:max="50"
            app:indicatorColor="@color/blue"
            app:trackColor="#DCDBDB"/>
        <TextView
            android:id="@+id/tv_exam_mark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="20/50"
            android:layout_marginStart="10dp"
            android:layout_weight=".5"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="7dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_gradient"
                android:gravity="center"
                android:padding="3dp"
                android:text="Analysis"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_reattempt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/light_blue_gradient"
                android:gravity="center"
                android:text="Re-Attempt"
                android:padding="3dp"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>